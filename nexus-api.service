[Unit]
Description=NEXUS FastAPI Server
After=network.target docker.service
Wants=docker.service

[Service]
Type=simple
User=philip
Group=philip
WorkingDirectory=/home/philip/nexus
Environment="PATH=/home/philip/nexus/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/philip/nexus/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8080
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
